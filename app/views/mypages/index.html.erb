<div class="container-fluid mypage-index-wrapper">
    
    <%= will_paginate %>
    
    <!--登録銘柄一覧-->
    <div class="row">
    <!--登録した酒を4つずつ取得-->
    <% @mypages.each_slice(4) do |reg_sake1, reg_sake2, reg_sake3, reg_sake4| %> 

    <!--4つを1つずつ処理-->
      <% [reg_sake1, reg_sake2, reg_sake3, reg_sake4].each do |sake|%> 
    
    <!--sakeが空値でない(each.sliceのエラー対策)-->
      <% if sake != nil %>
      <div class="col-md-3">
        <div class="thumbnail shadow topic-index-single">
        
        <!---画像と銘柄名--->
        <%= image_tag sake.image_url.url, class: 'sake' %>
        <div class="caption">
        <h4 class="well"><%= sake.meigara %></h4>
        
        <!---産地～酸度--->
        <!--テーブル作成テスト-->
          <table border="1" width="270">
            <tr><th>産地</th><td><%= sake.locaility %></td><th>精米歩合</th><td><%= sake.seimai_buai %></td></tr>
            <tr><th colspan="2">アルコール度数</th><td colspan="2"><%= sake.alcohol_degree %></td></tr>
            <tr><th>日本酒度</th><td><%= sake.sake_meter_value %></td><th>酸度</th><td><%= sake.acidity %></td></tr>
          </table>
        
        </div>
        
                <!---いいねのハートマークとカウント,コメントリンク--->
        <!---current_userがいいねしてたら黒、していなかったら空白のハート--->
        <% if !sake.favorite_users.include?(current_user) %>
          <%= link_to favorites_path(jsake_id: sake.id, now_url: request.url), method: :post do %>
          <%= image_tag 'icons/blank-heart.png', class: 'sns-icon' %>
          <% end %>
        <% else %>
          <%= link_to unfavorites_path(jsake_id: sake.id, now_url: request.url), method: :delete do %>
          <%= image_tag 'icons/red-heart.png', class: 'sns-icon' %>
          <% end %>
        <% end %>
        <!--いいね数の表示-->
         <%= sake.favorite_users.count %>
        
        <!--コメント入力へのリンク-->
         <%= link_to new_comment_path(jsake_id: sake.id), method: :get do %>
         <%= image_tag 'icons/comment.png', class: 'sns-icon' %>
         <% end %>
        
        <!--編集へのリンク-->
        <%= link_to jsake_path(id: sake.id), method: :patch do %>
        <%= image_tag 'icons/edit.png', class: 'sns-icon' %>
        <% end %>
        
        <!--アコーディオン形式採用&レイアウト整理予定(レイアウト崩れないか要確認)-->
          <p>
            <a class="btn btn-primary" data-toggle="collapse" href="#reg_sake<%= sake.id%>" role="button" aria-expanded="false" aria-controls="collapseExample">
              コメントを見る
            </a>
          </p>
          
          <div class="collapse" id="reg_sake<%= sake.id%>">
            <div class="card card-body">
              <% sake.comments.each do |c|%>
              <div><%= c.body %></div>
              <% end %>
            </div>
          </div>
        
        
        <% end %>
        </div>
      </div>

      <% end %>
      
      </div>
    <% end %>
  </div>
      <%= will_paginate %>
  
    
