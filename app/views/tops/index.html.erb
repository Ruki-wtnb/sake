        <div class="thumbnail shadow topic-index-single">
        <%= image_tag all_sake1.image_url.url %>
        <br>
        <div class="caption">
        <h4 class="well"><%= all_sake1.meigara %></h4>  
        <h5>産地：<%= all_sake1.locaility %>&emsp;&emsp;精米歩合：<%= all_sake1.seimai_buai %></h5>
        <h5>アルコール度数：<%= all_sake1.alcohol_degree %></h5>
        <h5>日本酒度：<%= all_sake1.sake_meter_value %>&emsp;&emsp;酸度：<%= all_sake1.acidity%></h5>
        </div>
        <% end %>
        </div>
