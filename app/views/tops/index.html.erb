
 <div class"container-fluid top_search">
   <div class="row">
     <div class="col-md-offset-4 col-md-4">
       <div class="form-group top_search">
         <%= form_tag(search_tops_path, method: :get) do %>
         <%= text_field :word, params[:word], class: 'form-control' %>
         <%= submit_tag "検索" %>
         <% end %>
       </div>
     </div>
   </div>
 </div>


  <div class="container-fluid mypage-index-wrapper top_list">

    <%= will_paginate %>
    
    <div class="row">
    <% @tops.each_slice(4) do |all_sake1, all_sake2, all_sake3, all_sake4| %>
      
