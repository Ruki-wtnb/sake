
 <div class"container-fluid top_search">
   <div class="row">
     <div class="col-md-offset-4 col-md-4">
       <div class="form-group top_search">
         
         <%= form_for @search, url: '/tops/search' do |f| %>
         <%= f.label :word, "検索"%>
         <%= f.text_field :word, class: 'form-control' %>
         <%= f.submit "検索" %>
         <% end %>
       </div>
     </div>
   </div>
 </div>

  <div class="container-fluid mypage-index-wrapper top_list">

    <%= will_paginate %>
    
    <% @tops.each_slice(4) do |all_sake1, all_sake2, all_sake3, all_sake4| %>
    <div class="row">
      
      <!---全件スライス1--->
      <div class="col-md-3">
        <% if all_sake1 != nil %> <!---all_sake1が空白でない(each.sliceのエラー対策)--->
        <div class="thumbnail shadow topic-index-single">
        
        <!---画像と銘柄名--->
        <%= image_tag all_sake1.image_url.url, class: 'sake' %>
        <br>
        <div class="caption">
        <h4 class="well"><%= all_sake1.meigara %></h4>
        
        <!---いいねのハートマークとカウント,コメントリンク--->
        <% if !all_sake1.favorite_users.include?(current_user) %>　<!---current_userがいいねしてたら黒、していなかったら空白--->
          <%= link_to favorites_path(jsake_id: all_sake1.id), method: :post do %>
          <%= image_tag 'icons/blank-heart.png', class: 'sns-icon' %>
          <% end %>
        <% else %>
          <%= link_to unfavorites_path(jsake_id: all_sake1.id), method: :delete do %>
          <%= image_tag 'icons/filled-heart.png', class: 'sns-icon' %>
          <% end %>
        <% end %>
         <%= all_sake1.favorite_users.count %>
        <%= image_tag 'icons/comment.png', class: 'sns-icon' %>
        
        <!---産地～酸度--->
        <h5>産地：<%= all_sake1.locaility %>&emsp;&emsp;精米歩合：<%= all_sake1.seimai_buai %></h5>
        <h5>アルコール度数：<%= all_sake1.alcohol_degree %></h5>
        <h5>日本酒度：<%= all_sake1.sake_meter_value %>&emsp;&emsp;酸度：<%= all_sake1.acidity%></h5>
        </div>
        <% end %>
        </div>
      </div>
      
      
